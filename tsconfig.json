{
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "module": "ES2020",
    "moduleResolution": "Node",
    "target": "ES2017",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "types": ["vite/client"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "preserve"
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
